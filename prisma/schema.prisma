generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lecture {
  link        String     @id
  title       String
  image       String
  channelName String
  publishedAt DateTime
  Position    Position[]
}

model Position {
  link String
  fen  String

  lecture Lecture @relation(fields: [link], references: [link], onDelete: Cascade)

  @@id([link, fen])
  @@index([fen])
}
