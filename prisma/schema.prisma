generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lecture {
  id          String     @id
  title       String
  channelName String
  publishedAt DateTime
  Position    Position[]

  @@index([publishedAt(sort: Desc)])
}

model Position {
  id  String
  fen String

  lecture Lecture @relation(fields: [id], references: [id], onDelete: Cascade)

  @@id([id, fen])
  @@index([fen])
}

model Request {
  id String @id
}
